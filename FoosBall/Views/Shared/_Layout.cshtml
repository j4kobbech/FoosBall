<!DOCTYPE html>
<html data-ng-app="FoosBall" data-ng-controller="BaseController">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="robots" content="noindex">
    <link rel="shortcut icon" href="https://s3-eu-west-1.amazonaws.com/images.trustpilot.com/static/foosball/favicon.ico" type="image/x-icon" />
    <title data-ng-bind="appSettings.AppNameWithEnvironment">&#x022EF;&#x022EF;&#x029BF;</title>
    <link href="/css/minified/foosball.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <img data-ng-src="{{staticResources.backgroundImageUrl}}" id="bg" class="bgwidth" alt="background image" />
    <header>
        <a href="#" data-ng-href="/#/">
            <div id="app-title">
                <div class="logo-picture">
                    <img data-ng-src="{{staticResources.iconUrl}}" alt="logo" />
                </div>
                <div class="logo-text" data-ng-bind="appSettings.AppNameWithEnvironment"></div>
            </div>
        </a>

        @* MAIN MENU *@
        <nav class="main-menu">
            <ul>
                <li class="Scoreboard"><a data-ng-href="/#/players">Scoreboard</a>&nbsp;&nbsp;&#x2022;&nbsp;</li>
                <li class="Teams"><a data-ng-href="/#/teams">Teams</a>&nbsp;&nbsp;&#x2022;&nbsp;</li>
                <li class="Matches"><a data-ng-href="/#/matches">Matches</a>&nbsp;&nbsp;&#x2022;&nbsp;</li>
                <li class="Stats"><a data-ng-href="/#/stats">Stats</a></li>
            </ul>
        </nav>

        @* LOGIN/ACCOUNT STATUS *@
        <div class="login-display">
            <div data-ng-cloak data-ng-if="session.isLoggedIn" class="menu-account-info">
                Hi {{session.userName}}
                [ <a href="#" data-ng-href="/#/user-profile">Account</a> <span data-ng-if="session.IsAdmin">&middot; <a data-ng-href="/#/admin">Admin</a></span> &middot; <a href="#" data-ng-click="logout()">Log out</a> ]
            </div>

            <div data-ng-if="!session.isLoggedIn" class="menu-login-info">
                <a href="#" ng-href="/#/login">Log on</a> or <a href="#" ng-href="/#/signup">Sign up</a>
            </div>
        </div>

    </header>

    <div data-ng-cloak id="page" class="clearfix">
        <div id="main-view" data-ng-view></div>
        <!-- .NET MVC: RenderBody() method must be called @RenderBody()-->
    </div>

    @* Thirdparty Javascript *@
    <script src="/js/lib/jquery.js"></script>
    <script src="/js/lib/angular.js"></script>
    <script src="/js/lib/angular-resource.js"></script>
    <script src="/js/lib/angular-route.js"></script>
    <script src="/js/lib/md5.js"></script>
    <script src="/js/lib/highcharts.js"></script>
    <script src="/js/lib/event.js"></script>
    @* Foosball Javascript *@
    <script src="/js/app/jquery.foosBall.js"></script>
    <script src="/js/app/foosball.app.js"></script>
    <script src="/js/services/api.service.js"></script>
    <script src="/js/services/appsettings.service.js"></script>
    <script src="/js/services/session.service.js"></script>
    <script src="/js/services/staticresources.service.js"></script>
    <script src="/js/directives/foosball-score.directive.js"></script>
    <script src="/js/directives/focus-me.directive.js"></script>
    <script src="/js/controllers/base.controller.js"></script>
    <script src="/js/controllers/admin.controller.js"></script>
    <script src="/js/controllers/login.controller.js"></script>
    <script src="/js/controllers/teams.controller.js"></script>
    <script src="/js/controllers/matches.controller.js"></script>
    <script src="/js/controllers/players.controller.js"></script>
    <script src="/js/controllers/playerstats.controller.js"></script>
    <script src="/js/controllers/signup.controller.js"></script>
    <script src="/js/controllers/stats.controller.js"></script>
    <script src="/js/controllers/createteam.controller.js"></script>
    <script src="/js/controllers/submitmatch.controller.js"></script>
    <script src="/js/controllers/user.controller.js"></script>
    <!--
    -->
    
    <!--
    <script async src="/bundles/all"></script>
    -->
</body>
</html>
